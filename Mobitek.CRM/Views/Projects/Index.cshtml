@using Mobitek.CRM.Models.ProjectModels
@model ProjectsViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<section class="bootstrap-select">
    <div class="row" id="mainRow">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Kullanıcı Bilgileri</h4>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int index = 1;
                            }
                            @foreach (var item in Model.Projects.ToList())
                            {
                                <tr>
                                    <td><a type="button" class="btn btn-primary" href="@Url.Action("Detail", "Projects", @item.Id)"/>Detay
                                    <a type="button" class="btn btn-primary" href="@Url.Action("Detail", "Projects", @item.Id)"/>Edit</td>
                                    <th scope="row">@index</th>
                                    <td>@item.Name</td>
     
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>